<h1>Listing articles</h1>

<div class = 'table-bordered'>
  <table class = 'test__Table table-condensed table-hover'>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td>
        <button class="btn btn-info"> <%= link_to 'Show', article_path(article) %> </button>
      </td>
      <td>
        <button class="btn btn-info"> <%= link_to 'Edit', edit_article_path(article) %> </button>
      </td>
      <td>
        <button class="btn btn-danger"> <%= link_to 'Destroy', article_path(article),
                                                    method: :delete,
                                                    data: { confirm: 'Are you sure?' } %> </button>
      </td>
    </tr>
  <% end %>
  </table>
</div>
  <button class="test__mainButton btn btn-info"> <%= link_to 'Main', controller: 'welcome', action: 'index'  %> </button>